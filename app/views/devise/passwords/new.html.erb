<%= form_for(resource,
             as: resource_name,
             url: password_path(resource_name),
             html: { class: 'form-signin', method: :post }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <legend><%= t('devise.buttons.forgot_password') %></legend>

  <div class="form-label-group">
    <%= f.label :email %>
    <%= f.email_field :email, required: true, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit(
          t('.send_instructions'),
          class: 'btn btn-lg btn-primary btn-block send-instructions'
        ) %>
  </div>

  <div class="row">
    <%- if devise_mapping.registerable? %>
      <div class="col-lg-6">
        <%= link_to t('devise.buttons.sign_in'), new_session_path(resource_name), class: 'btn btn-outline-success btn-block' %>

      </div>
    <% end %>

    <%- if devise_mapping.recoverable? %>
      <div class="col-lg-6">
        <%= link_to t('devise.buttons.sign_up'), new_registration_path(resource_name), class: 'btn btn-success btn-block' %>
      </div>
    <% end %>
  </div>
<% end %>
