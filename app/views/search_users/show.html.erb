<div class="row page-actions">
  <div class="col-lg-12">
    <%= link_to '< Back to search', root_url, class: 'btn btn-outline-primary' %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-dark">
      <caption>Found <%= @response['total_count'] %> records</caption>

      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Gravatar</th>
          <th scope="col">Login</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>

      <tbody>
      <% @response['items'].each_with_index do |user, index| %>
        <tr>
          <th scope="row" class="align-middle"><%= index + 1 %></th>
          <td class="align-middle">
            <%= image_tag(user['avatar_url'], width: 40, height: 40, alt: user['login'] )%>
          </td>
          <td class="align-middle"><%= user['login'] %></td>
          <td class="align-middle">
            <div class="btn-group" role="group">
              <button id="actionsButtons" type="button" class="btn btn-outline-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Actions
              </button>
              <div class="dropdown-menu" aria-labelledby="actionsButtons">
                <%= link_to('View JSON', user['url'], class: 'dropdown-item', target: '_blank') %>
                <%= link_to('GitHub profile', user['html_url'], class: 'dropdown-item', target: '_blank') %>
                <%= link_to('Repositories', user['repos_url'], class: 'dropdown-item', target: '_blank') %>
                <%= link_to('Gists', user['gists_url'], class: 'dropdown-item', target: '_blank') %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
